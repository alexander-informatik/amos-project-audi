		}
		else
		{
			this.marker_currentLocation.setPosition(googlegps);
		}
		var nextWaypoint =  this.route_markersArray[this.idxNextWaypoint].getPosition();
		var d = latlng.getDistance( nextWaypoint );
		
		if(d &lt; this.WaypointDetectionDistance)
		{
			this.idxNextWaypoint++;
		}
		if(this.idxNextWaypoint &lt; this.route_markersArray.length)
		{
			positions=new Array();
			positions[0] = latlng;
			positions[1] = this.route_markersArray[this.idxNextWaypoint].getPosition();
			this.drawPath_currentLocation_to_nextWaypoint.setPath(positions);
			this.drawPath_currentLocation_to_nextWaypoint.setMap(this.map);
		}
		else
		{
			this.drawPath_currentLocation_to_nextWaypoint.setMap(null);	
		}
	}

