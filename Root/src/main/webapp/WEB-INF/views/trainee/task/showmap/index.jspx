	aMap.prototype.createNewMarker = function(icontype, latlng, title)
	{
		var image;
		if(0 == icontype.localeCompare("start"))
		{
			image = '${url_mapicon_start}';
		}
		else
		if(0 == icontype.localeCompare("finish"))
		{
			image = '${url_mapicon_finish}';
		}
		else
		if(0 == icontype.localeCompare("currentlocation"))
		{
			image = '${url_mapicon_currentlocation}';
		}
		else
		{
			image = '${url_mapicon}';
		}

		var m = 
			new google.maps.Marker(
			{
				position: latlng,
				map: this.map,
				icon: image,
				title: title
			});

		return m;
	}




